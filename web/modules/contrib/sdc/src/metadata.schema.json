{
  "$id": "https://git.drupalcode.org/project/sdc/-/raw/1.x/src/metadata.schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["name"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "title": "Name",
      "description": "Human readable version of the machineName",
      "examples": [
        "Button",
        "Module 23F"
      ]
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Human readable description for the component",
      "examples": [
        "Plain button. Only available for use in other components. Do not include directly."
      ]
    },
    "status": {
      "type": "string",
      "title": "Development Status",
      "description": "Use this property to identify if the component can be safely used in production.",
      "enum": [
        "WIP",
        "BETA",
        "READY",
        "DEPRECATED"
      ]
    },
    "libraryDependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]*/.*$",
        "title": "Library Dependency",
        "description": "The machine name of the library this component depends on.",
        "examples": [
          "drupal/jquery",
          "my-module/foo"
        ]
      }
    },
    "schemas": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "props": {
          "$ref": "http://json-schema.org/draft-04/schema#"
        },
        "slots": {
          "$ref": "http://json-schema.org/draft-04/schema#"
        }
      }
    },
    "thirdPartySettings": {
      "type": "object",
      "additionalProperties": true,
      "patternProperties": {
        ".*": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
